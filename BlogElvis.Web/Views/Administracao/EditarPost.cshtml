@model BlogElvis.Web.Models.Administracao.CadastrarPOstViewModel
@{
    ViewBag.Title = "EditarPost";
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Views/Administracao/CadastrarPost.js")"></script>
}

@using (@Html.BeginForm())
{

<h2>Cadastrar Post</h2>
@Html.ValidationSummary(true)

<div class="form-group">
  @Html.LabelFor(x => x.Id)
  @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @disabled = "disabled"})
  @Html.ValidationMessageFor(x => x.Id)
  @Html.HiddenFor(x => x.Id)
</div>


<div class="form-group">
  @Html.LabelFor(x => x.Titulo)
  @Html.TextBoxFor(x => x.Titulo, new { @class = "form-control" })
  @Html.ValidationMessageFor(x => x.Titulo)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Autor)
    @Html.TextBoxFor(x => x.Autor, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Autor)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Resumo)
    @Html.TextAreaFor(x => x.Resumo, new { row = 8, @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Resumo)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Descricao)
    @Html.TextAreaFor(x => x.Descricao, new { row = 8, @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Descricao)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.DataPublicao)
    @Html.TextBoxFor(x => x.DataPublicao, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
    @Html.ValidationMessageFor(x => x.DataPublicao)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.HoraPublicao)
    @Html.TextBoxFor(x => x.HoraPublicao, "{0:hh:mm:ss}", new { type = "time", @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HoraPublicao)
</div>

<div class="checkbox">
    @Html.CheckBoxFor(x => x.Visivel)
    @Html.LabelFor(x => x.Visivel)
</div>

<h2> Tags</h2>
<div class="form-group cadastro-post">
    @Html.Label("Tag")
    @Html.TextBox("Tag", "", new { @class = "form-control" })
    <p>
        <input type="button" value="Adicionar" id="adicionar" class="btn btn-primary" />
    </p>
</div>
    <div class="form-group">
        <ul id="resultado">
            @if (Model.Tags != null)
            {
                foreach (var item in Model.Tags)
                {
                    <li><span>@item</span><a tag="@item" class="remover-tag icone-excluir" title="Remover"></a></li>
                    <input name="Tags" type="hidden" value="@item" />
                }
            }

        </ul>
    </div>

<p>
  <input type="submit" value="salvar" class="btn btn-primary" />
</p>
}