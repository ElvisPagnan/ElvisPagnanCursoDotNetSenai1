@model BlogElvis.Web.Models.Administracao.CadastrarUsuarioViewModel
@{
    ViewBag.Title = "EditarUsuario";
}

@using (@Html.BeginForm())
{

    <h2>Editar Usuario</h2>
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(x => x.Id)
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @disabled = "disabled" })
        @Html.ValidationMessageFor(x => x.Id)
        @Html.HiddenFor(x => x.Id)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Login)
        @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Nome)
        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Senha)
        @Html.TextAreaFor(x => x.Senha, new { row = 8, @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.ConfirmarSenha)
        @Html.TextAreaFor(x => x.ConfirmarSenha, new { row = 8, @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ConfirmarSenha)
    </div>

    <p>
        <input type="submit" value="salvar" class="btn btn-primary" />
    </p>

}